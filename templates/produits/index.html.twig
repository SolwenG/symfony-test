{% extends 'base.html.twig' %}
{% block body %}
    <style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
</style>
    <div class="example-wrapper">
        <h1>
            Ajouter un nouveau produit :    
                    
        </h1>
        <div class="form">
            {{ form_start(formProduit) }}
            {{ form_label(formProduit.name, 'Nom : ', {'label_attr': {'class': 'label' }}
            ) }}  
                        
            {{ form_widget(formProduit.name, {'attr': {'class': 'input' }}
            ) }} 
                        
            {{ form_label(formProduit.description, 'Description : ', {'label_attr': {'class': 'label' }}
            ) }}   
                        
            {{ form_widget(formProduit.description, {'attr': {'class': 'input' }}
            ) }} 
                        
            {{ form_label(formProduit.quantity, 'Quantit√© : ',  {'label_attr': {'class': 'label' }}
            ) }}      
                        
            {{ form_widget(formProduit.quantity, {'attr': {'class': 'input' }}
            ) }}
                                    
                        
            <button type="submit">
                Ajouter
                            
            </button>
            {{ form_end(formProduit) }}
        </div>
    </div>
    <button type="button" onclick="location.href='{{ path('app_homepage') }}'">
        Accueil 
            
    </button>
{% endblock %}
